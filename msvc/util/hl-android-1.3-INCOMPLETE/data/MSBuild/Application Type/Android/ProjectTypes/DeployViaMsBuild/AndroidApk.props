<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  
  <PropertyGroup Condition="'$(AndroidApkBeforeTargets)' == '' and '$(AndroidApkAfterTargets)' == '' and '$(ConfigurationType)' != 'Makefile'">
  
    <AndroidApkBeforeTargets>AndroidApkSign</AndroidApkBeforeTargets>
    
    <AndroidApkAfterTargets>Link</AndroidApkAfterTargets>
    
  </PropertyGroup>

  <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->

  <ItemDefinitionGroup>

    <AndroidApk>

      <OutputCommandLine Condition="'%(AndroidApk.OutputCommandLine)' == ''">false</OutputCommandLine>

      <TrackerLogDirectory Condition="'%(AndroidApk.TrackerLogDirectory)' == ''">$(TLogLocation)</TrackerLogDirectory>

    </AndroidApk>

  </ItemDefinitionGroup>

  <!--
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->

</Project>
